<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myandroidapps.goneil.chores" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ChoreListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChoreDetailActivity"
            android:label="@string/title_chore_detail"
            android:parentActivityName=".ChoreListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ChoreListActivity" />
        </activity>
    </application>

</manifest>
